                            "PROVISIONING",
                            "DOWNLOAD_SOURCE",
                            "INSTALL",
                            "PRE_BUILD",
                            "BUILD",
                            "POST_BUILD",
                            "UPLOAD_ARTIFACTS",
                            "FINALIZING"
                        ],
                        "completed-phase-status": [
                            "TIMED_OUT",
                            "STOPPED",
                            "FAILED", 
                            "SUCCEEDED",
                            "FAULT",
                            "CLIENT_ERROR"
                        ],
                        "project-name": [
                            {"Ref":"CodeBuildProject"}
                        ]
                    }
                },
                "Targets": [{
                    "Arn": { "Fn::GetAtt": [ "CodeBuildStatusSQSQueue", "Arn" ] },
